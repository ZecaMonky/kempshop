<header class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">Kemp Shop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link <%= locals.page === 'home' ? 'active' : '' %>" href="/">Главная</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= locals.page === 'catalog' ? 'active' : '' %>" href="/catalog">Каталог</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/cart" class="nav-link position-relative">
                        <i class="fas fa-shopping-cart"></i>
                        <% if (locals.cart && cart.items && cart.items.length > 0) { %>
                            <span class="cart-counter"><%= cart.items.length %></span>
                        <% } %>
                    </a>
                </li>
                <% if (locals.user) { %>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <%= user.firstName %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/profile">Профиль</a></li>
                            <% if (user.role === 'admin') { %>
                                <li><a class="dropdown-item" href="/admin">Админ панель</a></li>
                            <% } %>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout">Выход</a></li>
                        </ul>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link <%= locals.page === 'login' ? 'active' : '' %>" href="/login">Вход</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= locals.page === 'register' ? 'active' : '' %>" href="/register">Регистрация</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</header> 