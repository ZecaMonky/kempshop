<header class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="/">
            <img src="/images/logo.png" alt="Логотип" style="height:36px;width:auto;margin-right:10px;">
            <span style="font-family: 'Oswald', Arial, sans-serif; font-size: 1.7rem; font-weight: 700; letter-spacing: 1px; color: #222;">
                Oren Fencing <span style="color: #3b5bdb;">Store</span>
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link <%= locals.page === 'home' ? 'active' : '' %>" href="/">Главная</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= locals.page === 'catalog' ? 'active' : '' %>" href="/catalog">Каталог</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= locals.page === 'about' ? 'active' : '' %>" href="/about">О нас</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= locals.page === 'contacts' ? 'active' : '' %>" href="/contacts">Контакты</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/cart" class="nav-link position-relative">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                          <path d="M0 1.5A.5.5 0 0 1 .5 1h1a.5.5 0 0 1 .485.379L2.89 5H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 14H4a.5.5 0 0 1-.491-.408L1.01 2H.5a.5.5 0 0 1-.5-.5zm3.14 4l1.25 6.5h7.22l1.25-6.5H3.14z"/>
                        </svg>
                        <% if (locals.cart && cart.items && cart.items.length > 0) { %>
                            <span class="cart-counter"><%= cart.items.length %></span>
                        <% } %>
                    </a>
                </li>
                <% if (locals.user) { %>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person me-1" viewBox="0 0 16 16">
                              <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm4-3a4 4 0 1 1-8 0 4 4 0 0 1 8 0z"/>
                              <path d="M14 14s-1-1.5-6-1.5S2 14 2 14v1h12v-1z"/>
                            </svg>
                            <%= user.firstName %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item d-flex align-items-center" href="/profile">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person me-2" viewBox="0 0 16 16">
                                  <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm4-3a4 4 0 1 1-8 0 4 4 0 0 1 8 0z"/>
                                  <path d="M14 14s-1-1.5-6-1.5S2 14 2 14v1h12v-1z"/>
                                </svg>
                                Профиль</a></li>
                            <% if (user.role === 'admin') { %>
                                <li><a class="dropdown-item d-flex align-items-center" href="/admin">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shield-lock me-2" viewBox="0 0 16 16">
                                      <path d="M5.072 1.01a.5.5 0 0 1 .393-.01l2.5.833 2.5-.833a.5.5 0 0 1 .393.01c.13.06.242.18.242.34v4.5c0 2.5-1.5 4.5-3.5 5.5-2-1-3.5-3-3.5-5.5v-4.5a.37.37 0 0 1 .242-.34zM8 2.058l-2.5.833v4.109c0 2.1 1.2 3.9 2.5 4.7 1.3-.8 2.5-2.6 2.5-4.7V2.891L8 2.058z"/>
                                      <path d="M8 5a1 1 0 0 1 1 1v1a1 1 0 0 1-2 0V6a1 1 0 0 1 1-1zm0 3a.5.5 0 0 0 .5-.5V6a.5.5 0 0 0-1 0v1.5A.5.5 0 0 0 8 8z"/>
                                    </svg>
                                    Админ панель</a></li>
                            <% } %>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item d-flex align-items-center" href="/logout">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right me-2" viewBox="0 0 16 16">
                                  <path fill-rule="evenodd" d="M6 3a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-1 0v-1A.5.5 0 0 1 6 3zm0 9a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-1 0v-1A.5.5 0 0 1 6 12zm-4-4a.5.5 0 0 1 .5-.5h7.793l-2.147-2.146a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H2.5A.5.5 0 0 1 2 8z"/>
                                </svg>
                                Выход</a></li>
                        </ul>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link <%= locals.page === 'login' ? 'active' : '' %>" href="/login">Вход</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= locals.page === 'register' ? 'active' : '' %>" href="/register">Регистрация</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</header> 